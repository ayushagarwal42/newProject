<% layout("/layouts/boilerplate")%>
<body>
    <h1><%=listing.title%></h1>
    <p><%=listing.description%></p>
    <% if (listing.image) { %>
        <img src="<%= listing.image %>" alt="<%= listing.title %>" style="width: 400px; height: 400px;">
    <% } %>
    <p>Price: <%= listing.price %></p>
    <p>Location: <%= listing.location %></p>
    <p>Country: <%= listing.country %></p>
    <a href="/listings">Back to Listings</a>
</body>
